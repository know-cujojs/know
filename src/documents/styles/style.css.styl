@import "font.css"

.icon-cujojs
  line-height inherit
  width 1em
  height 1em
  background-image none
  vertical-align top
  color #666

// helpers

animation-duration(duration)
  -webkit-animation-duration duration
  animation-duration duration

animation-name(name)
  -webkit-animation-name name
  animation-duration name

// END helpers

a, a:link
  cursor pointer

p
  line-height 1.6em
  color #222

h1, h2, h3, h4, h5, h6
  color #222
  font-weight 200
  margin-top 1em

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

.navbar .nav > li > a,
.navbar a.brand
  color #111
  transition text-shadow .25s ease

.navbar .nav > li > a:hover,
.navbar a.brand:hover
  text-shadow 0px 1px 0 #fff, 0 0 8px #ccc

.navbar .nav > li > a
  font-size 16px
  padding-left 1em
  padding-right 1em
  font-weight 300

.navbar .nav.social li a
  padding-left 0.5em
  padding-right 0.5em

.navbar .nav.social li:last-child a
  padding-right 0

.navbar .nav.social [class*="icon-"] {
  color #555
  margin-right 3px
  margin-top 2px
}

body > div.container
  padding-bottom 41px

footer
  margin-bottom: 1em

section footer
  padding-bottom: 0

#content
  margin-top 2em

.hero-unit
  background-color #333
  background-image url(texture.png)
  color #eee !important
  border 2px solid #666

.hero-unit h1
  font-size 6em
  font-weight bold
  margin-top 0
  letter-spacing -2px

.hero-unit .cujo
  color #eee
  text-shadow #06f 0 0 0.25em

.hero-unit .js
  color #666

.hero-unit p
  font-size 2em
  line-height 1.2em
  margin-top 0.2em

nav.linklist p
  margin 0

footer .copyright
  font-size 12px

footer .last-update
  font-style italic
  font-size 12px
  margin-top 10px

.social-buttons
  animation-duration(3s)
  animation-name(slowfadein)

article .published
  float right
  text-align right
  font-size 12px
  margin-bottom 4px

article .published .date
  font-style italic

nav.tags ul
  display inline
  list-style none
  margin 0

nav.tags ul li
  display inline

nav.tags ul li:after
  content ', '

nav.tags ul li:last-child:after
  content ''

aside.lesson-plan
  margin-bottom 1em
  padding 0 0.5em
  background-color #f5f5f5
  border 1px solid rgba(0, 0, 0, 0.15)
  border-radius 2px

.report-issues
  font-size 0.8em
  line-height normal
  clear right

  [class^="icon-"]
    margin-top -1px
    padding-right 2px

.row.auto-clear .span1,
.row.auto-clear .span2:nth-child(6n+7),
.row.auto-clear .span3:nth-child(4n+5),
.row.auto-clear .span4:nth-child(3n+4),
.row.auto-clear .span6:nth-child(odd)
  clear left

.project .btn-group
.project .install-npm,
.project .install-bower
  margin-bottom: 10px;

#blog-archives

  h3
    font-size: 1.5em

  h3 a
    text-decoration none
    font-weight normal

  h3 a:hover
    color #08c

  time
    line-height 1.6em

  time .month
    text-transform uppercase

  .post
    h1, h2, h3, h4, h5, h6
      display block
      color inherit
      font-size: 1.2em
      position static
      float none

@media (max-width: 767px)
  #blog-archives

    h2
      display none

    time
      display block
      margin-bottom 10px
      color #222

    time .month:after
      content: ' '

    time .day:after
      content: ', '

@media (min-width: 768px)

  #blog-archives
    width 70%
    margin-left auto
    margin-right auto

    article
      position relative
      margin-left 5em
      padding 0.2em 0 .7em 7em

    h2
      font-weight normal
      color #aaa
      margin 0
      display inline-block
      position relative
      float left

    h3
      color #222
      margin 0

    h3 a
      display inline-block
      color inherit

    time
      position absolute
      text-align right
      left 2em
      top 1.5em
      color #aaa
      font-size .9em
      line-height 1.2em

    time .month
    time .day
      display inline-block

    time .month
      margin-right 3px

    time .year
      display none


// animations

@keyframes slowfadein
  0%
    opacity 0
  80%
    opacity 0
  100%
    opacity 1

// highlight.js tweaks

code
  color #48484c
  font-family Consolas, 'Liberation Mono', Courier, monospace

pre.highlighted
  padding 0 !important

pre code
  padding 6px 10px
  font-size 13px
  line-height 19px
  background-color inherit

// media query tweaks

@media print
  .hide-print
    display none !important

@media (max-width: 979px)

  .navbar-fixed-top .navbar-inner,
  .navbar-fixed-bottom .navbar-inner
    padding 0 20px 0 20px

@media (max-width: 767px)

  .navbar-alt
    display none

  body > div.container
    padding-bottom 0

  .navbar-static-top
    width initial

  .social-buttons
    display none
